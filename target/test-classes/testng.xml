<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Suite">

    <test name="register_NewUser">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="RegisterTest">
                <methods>
                    <include name="register_NewUser"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="searchProduct">
        <parameter name="product" value="macbook"></parameter>
        <classes>
            <class name="MainTest">
                <methods>
                    <include name="searchProduct"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="currency">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="ProductTest">
                <methods>
                    <include name="currency"></include>
                </methods>
            </class>
        </classes>
    </test>


</suite>

